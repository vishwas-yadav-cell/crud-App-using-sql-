<h3>{{viewTitle}}</h3>
{{#each data}}
<form action="/employee/employee-update" method="post">
    <div class="form-group">
        <label>Email</label>
        <input type="email" class="form-control" name="email" placeholder="Enter the E-mail"  value="{{this.email}}" readonly>
    </div>
    <div class="form-group">
        <label>Full Name</label>
        <input type="text" class="form-control" name="fullName" placeholder="Enter the Full Name" value="{{this.fullName}}">
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Mobile</label>
            <input type="text" class="form-control" name="mobile" placeholder="Enter the Mobile" value="{{this.mobile}}">
        </div>
        <div class="form-group col-md-6">
            <label>city</label>
            <input type="text" class="form-control" name="city" placeholder="Enter the City"  value="{{this.city}}">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-info">Submit</button>
        </div>
    </div>

</form>
{{/each}}